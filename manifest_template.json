{
    "manifest_version": 3,
    "name": "", // Name of your extension
    "version": "", // Version number (e.g., "1.0.0")
    "description": "", // Short description of what your extension does
  
    "permissions": [
      // List of required permissions
      // e.g., "storage", "activeTab", "scripting", "identity", "tabs", "notifications"
    ],
  
    "host_permissions": [
      // Domains or URL patterns your extension interacts with
      // e.g., "https://www.googleapis.com/*", "https://mail.google.com/*", "*://*/*"
    ],
  
    "oauth2": {
      "client_id": "", // Your Google OAuth client ID
      "scopes": [
        // List of OAuth scopes required (e.g., "https://www.googleapis.com/auth/gmail.readonly")
      ]
    },
  
    "background": {
      "service_worker": "", // Background script file (e.g., "background.js")
      "type": "module" // Use "module" for ES module support
    },
  
    "action": {
      "default_popup": "", // Path to your popup HTML file (e.g., "popup.html")
      "default_icon": {
        "16": "", // 16px icon path
        "48": "", // 48px icon path
        "128": "" // 128px icon path
      },
      "default_title": "" // Tooltip text for the extension icon
    },
  
    "content_scripts": [
      {
        "matches": [
          // URL patterns to inject content scripts into
          // e.g., "<all_urls>"
        ],
        "js": [
          // Content script files (e.g., "content.js")
        ],
        "run_at": "document_idle" // When to run the script
      }
    ],
  
    "icons": {
      "16": "", // Path to 16px icon
      "48": "", // Path to 48px icon
      "128": "" // Path to 128px icon
    }
  }
  